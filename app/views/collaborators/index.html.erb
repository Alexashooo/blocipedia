<h4>Choose collaborators <%= @wiki.title %></h4>

<table class="table">
  <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td>
        <% if @wiki.users.include?(user) %>
           <%= link_to "Remove as collaborator", wiki_collaborator_path(@wiki, @wiki.collaborator_for(user)), method: :delete, class: "btn btn-danger" %>
        <% else %>
           <%= link_to "Add as Collaborator", wiki_collaborators_path(@wiki, user_id: user.id), method: :post, class: "btn btn-succss" %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>

<%=link_to "Back", edit_wiki_path(@wiki)%>
