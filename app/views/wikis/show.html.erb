<div class="container">
  <% renderer = Redcarpet::Render::HTML.new %>
  <% markdown = Redcarpet::Markdown.new(renderer) %>

  <h4><%=@wiki.title%></h4>
  <%=markdown.render(@wiki.body).html_safe%>

  <%= link_to 'Edit', edit_wiki_path, class: 'btn btn-success'%>
  <%= link_to 'Back', wikis_path, class: 'btn btn-success'%>
  <%= link_to 'Delete', @wiki, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this Wiki?' } %>
</div>
